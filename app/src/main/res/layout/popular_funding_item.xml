<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_marginBottom="8dp"
    android:background="#fff"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/popular_funding_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="1"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/popular_funding_rank"
        android:layout_toLeftOf="@+id/popular_funding_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popular_funding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Funding Title"
            android:textColor="@color/sub_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popular_funding_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Funding Description. This funding is..."
            android:textSize="14sp" />

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/popular_funding_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="280% in progress"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/popular_funding_image"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>